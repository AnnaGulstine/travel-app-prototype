<div class="container marginTop">
  <h1>Add a new pin</h1>
  <%= form_tag '/pins', method: :post do %>  
    <div class="form-group">
      <%= label_tag :link %>
      <%= text_field_tag :url %>  
    </div>
    <div class="form-group">
      <%= label_tag :note %>
      <%= text_field_tag :text %>  
    </div>
  <div ng-app="app" ng-controller="pinsController">   
    <div class="form-group">
      <%= label_tag :name %>
      <input ng-model="chosenPlace" name="name" type="text" googleplace places-type="establishment" class="inputText" />      
    </div>
  </div>         
  <div class="form-group">
    <%= label_tag :board %>
    <%= select_tag :board_id, options_from_collection_for_select(@boards, "id", :name), class: "form-control" %>    
  </div>
  <div class="form-group">
    <%= label_tag :category %>
    <%= select_tag :category_id, options_from_collection_for_select(@categories, "id", :name), class: "form-control" %>    
  </div>  
    <div>
    <%= submit_tag 'Create Pin', class: "btn btn-default" %>
    </div>
  <% end %>
</div>