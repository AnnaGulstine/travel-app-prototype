  <section id="hero" class="module-hero module-video module-full-height bg-light-30" data-background="assets/images/section-11.jpg">
    <!-- HERO TEXT -->
    <div class="hero-caption">
      <div class="hero-text">
        <div class="row">
          <h3 class="mh-line-size-3 font-alt marginBottom newTitle" id="signUpTitle">View / Edit This Note</h3>
        </div>

        <%= form_tag "/notes/#{@note.id}", method: :patch do %>

          <div class="row">
            <div class="smallMarginTop">
              <%= text_field_tag :title, @note.title, class: "mh-line-size-4 addNewField" %>
            </div>
          </div>
          <div class="row">
            <div class="smallMarginTop">
              <%= text_area_tag :text, @note.text, class: "mh-line-size-4 addNewField textArea" %>
            </div>
          </div>
          <div class="row">
            <div class="smallMarginTop">
            <%= submit_tag 'Submit', class: "btn btn-default buttonMargin" %>
            <br />
            <%= link_to "Delete This Note", "/notes/#{@note.id}", method: :delete, class: "btn btn-default smallMarginTop" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
      <!-- YOUTUBE VIDEO BACKGROUND-->
      <div class="video-player" data-property="{videoURL:'/assets/oceanVideo.mp4', containment:'.module-video', quality:'large', startAt:0, autoPlay:true, loop:true, opacity:1, showControls:false, showYTLogo:false, vol:0, mute:true}"></div>
      <!-- /YOUTUBE VIDEO BACKGROUND-->
  </section>


