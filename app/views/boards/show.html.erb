<div class="container-fluid mapContainer">
  <div ng-app="app">
    <div ng-controller="pinsController" ng-init="setup(<%= @board.id %>)">
      <h2 class="boardName"><%= @board.address.upcase %></h2>
      <div class="row">
        <div class="col-sm-2" id="pinSidebar">
          <div ng-repeat="pin in pins">
            <h4 id="pinName">{{ pin.name }}</h4>
            <h5><a href="{{ pin.url }}">Visit website</a></h5>          
            <h5>{{ pin.text }}</h5>
            <h5>{{ pin.address }}</h5>
            <p>{{ pin.id }}</p>
            <%= link_to "Edit this pin", "/pins/{{ pin.id }}/edit", class: "btn btn-default" %>
            <hr>            
          </div>
        </div>
        <div class="col-sm-10" id="pinMap"></div>
      </div>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= "#{ENV[ 'MY_API' ]}" %>" async defer></script>   
    </div>
  </div>

  <h4><%= link_to "Delete this board", "/boards/#{@board.id}", method: :delete %></h4>
</div>