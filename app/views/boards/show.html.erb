<div class="container-fluid mapContainer">
  <div ng-app="app">
    <div ng-controller="pinsController" ng-init="setup(<%= @board.id %>)">
      <div class="row marginTop">
        <div class="col-sm-2">
          <h2 class="boardName"><%= @board.name.upcase %></h2>
        </div>
        <div class="col-sm-4">
          <h4>FILTER BY:</h4>
            <button class="btn" name="Attractions" value="Attractions">Attractions</button>
            <button class="btn" name="Hotels" value="Hotels">Hotels</button>
            <button class="btn" name="Restaurants" value="Restaurants">Restaurants</button>
        </div>
      </div>
      <div class="row">     
        <div class="col-sm-2" id="pinSidebar">
          <div ng-repeat="pin in pins | filter: selectedCategory">
            <div ng-if="pin.name">
            <h4>{{ pin.name }}</h4>
            </div>
            <div ng-if="pin.url">
              <h4><a href="{{ pin.url }}">Visit website</a></h4>  
            </div>        
            <h5>{{ pin.text }}</h5>
            <%= link_to "Edit this pin", "/pins/{{ pin.id }}/edit", class: "btn btn-default" %>
            <hr>            
          </div>
        </div>
        <div class="col-sm-10" id="pinMap"></div>
      </div>

  <h4><%= link_to "Delete this board", "/boards/#{@board.id}", method: :delete %></h4>
<!--         <div>
        <h4 ng-repeat="category in categories">{{ category.category_id }}</h4>
      </div> -->
</div>
    </div>
  </div>